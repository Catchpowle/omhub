<div class="row center">
  <div class ="col-md-5">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">
        <h1><%= @user.name %></h1> 
        <p class="imager">
          <%= image_tag @user.photo.url(:medium) %>
        </p>
      </div>
      <div class="panel-body">
        <p><%= @user.bio %></p>
      </div>

      <!-- List group -->
      <ul class="list-group">
        <li class="list-group-item"><p><%= link_to "Website", @user.url, class: 'btn btn-lg btn-info' %>
      </ul>
    </div>
  </div>
<div>
<% for project in @user.projects %>
  <div class="box projects">
		<%= link_to image_tag(project.image.url(:medium)), project_path(project) %>
    <%= project.description %>
    <% if project.user == current_user %>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
	</div>
</div>
	
<% end %>


