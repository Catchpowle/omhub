<div class="center">
<div class="profile">
<h1><%= @user.name %></h1>
<%= image_tag @user.photo.url(:profile) %>

<p>
  <%= @user.bio %>
</p>

<p>
  <%= link_to "Website", @user.url, class: 'btn btn-lg btn-default' %>
</p>
</div>
<div>
<% for project in @user.projects %>
  <div class="box projects">
		<%= link_to image_tag(project.image.url(:medium)), project_path(project) %>
    <%= project.description %>
    <% if project.user == current_user %>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
	</div>
</div>
	
<% end %>


