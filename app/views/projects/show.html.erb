<head>
  <%= javascript_include_tag :defaults %>
</head>

<%= render 'carousel' %>


<p>
  <%= @project.name %>
</p>
<p>
  <%= @project.description %>
</p>
<p>
  <%= link_to "Launch Site", @project.url, class: "btn btn-default btn-lg" %>
</p>
<p>
  <%= link_to "Check it out on Github", @project.github, class: "btn btn-success btn-lg" %>
</p>
<% if @project.user == current_user %>
	<%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %>

<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'omhub'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
