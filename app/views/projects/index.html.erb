<%= render 'pages/home' unless user_signed_in? %>

<div id="projects" class = "transitions-enabled">
  <% @projects.each do |project| %>
    <div class="box panel panel-default">
      
        <%= link_to image_tag(project.image.url(:medium)), project_path(project) %>
      
      <div class = "list-group center">
        <li class="list-group-item"><p><%= link_to project.name, project_path(project) %></p>
        <p><%= link_to project.user.name, user_path(project.user) if project.user %></p>
        <p><% if project.user == current_user %>
          <%= link_to 'Edit', edit_project_path(project) %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></p></li>
        <% end %>
      </div>
    </div>
  <% end %>
</div>